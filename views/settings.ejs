<!DOCTYPE html>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title>Interacties Settings</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-dark text-light">
    <div class="container mt-5">
      <div class="d-flex align-items-center">
        <h2 class="mr-3">Interacties Settings</h2>
        <div class="form-check">
          <input type="checkbox" class="form-check-input" id="showSensitiveData" />
          <label class="form-check-label" for="showSensitiveData">Show Sensitive Data</label>
        </div>
      </div>

      <!-- TTS Controls -->
      <div class="card bg-secondary my-4">
        <div class="card-body">
          <h4 class="card-title">TTS Controls</h4>
          <div class="row mb-3">
            <div class="col-md-4">
              <div class="card bg-dark">
                <div class="card-body">
                  <h5 class="card-title">Status</h5>
                  <p>Current Status: <span id="ttsStatus">Loading...</span></p>
                  <div class="btn-group" role="group">
                    <button type="button" class="btn btn-primary" id="pauseResumeBtn" onclick="ttsPaused ? resumeTTS() : pauseTTS()">Pause</button>
                    <button type="button" class="btn btn-danger" id="skipBtn" onclick="skipTTS()">Skip</button>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-8">
              <div class="card bg-dark">
                <div class="card-body">
                  <h5 class="card-title">Upcoming Messages</h5>
                  <ul class="list-group" id="ttsQueueList">
                    <li class="list-group-item bg-dark text-light">Loading...</li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
          <!-- Recent TTS Files -->
          <div class="row mt-3">
            <div class="col-12">
              <div class="card bg-dark">
                <div class="card-body">
                  <h5 class="card-title">Recent TTS Messages (Last 3)</h5>
                  <ul class="list-group" id="recentTTSList">
                    <li class="list-group-item bg-dark text-light">Loading...</li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Overlay Elements Settings -->
      <div class="card bg-secondary my-4">
        <div class="card-body">
          <h4 class="card-title">Overlay Elements</h4>
          <form>
            <div class="form-check">
              <input
                type="checkbox"
                class="form-check-input"
                id="showBeatSaber"
              />
              <label class="form-check-label" for="showBeatSaber"
                >Show Beat Saber</label
              >
            </div>
            <div class="form-check">
              <input
                type="checkbox"
                class="form-check-input"
                id="showHeartRate"
              />
              <label class="form-check-label" for="showHeartRate"
                >Show Heart Rate</label
              >
            </div>
            <div class="form-check">
              <input
                type="checkbox"
                class="form-check-input"
                id="showSubscriberCount"
              />
              <label class="form-check-label" for="showSubscriberCount"
                >Show Subscriber Count</label
              >
            </div>
            <div class="form-check">
              <input
                type="checkbox"
                class="form-check-input"
                id="showLiveChat"
              />
              <label class="form-check-label" for="showLiveChat"
                >Show Live Chat</label
              >
            </div>
            <div class="form-check">
              <input
                type="checkbox"
                class="form-check-input"
                id="showCustomBox"
              />
              <label class="form-check-label" for="showCustomBox"
                >Show Background Box</label
              >
            </div>
            <button
              type="button"
              class="btn btn-primary mt-2"
              onclick="setOverlayElements()"
            >
              Set
            </button>
          </form>
        </div>
      </div>

      <!-- Livestream Settings -->
      <div class="card bg-secondary my-4">
        <div class="card-body">
          <h4 class="card-title">Livestream Settings</h4>
          <form>
            <div class="form-group">
              <label for="subscriberGoal">Subscriber Goal</label>
              <input
                type="number"
                class="form-control"
                id="subscriberGoal"
                min="0"
              />
            </div>
            <div class="form-group">
              <label for="youtubeChannelId">YouTube Channel ID</label>
              <input type="password" class="form-control sensitive-field" id="youtubeChannelId" />
            </div>
            <div class="form-group">
              <label for="youtubeLivestreamId">Livestream ID</label>
              <input
                type="password"
                class="form-control sensitive-field"
                id="youtubeLivestreamId"
              />
            </div>
            <button
              type="button"
              class="btn btn-primary mt-2"
              onclick="setLivestreamSettings()"
            >
              Set
            </button>
          </form>
        </div>
      </div>

      <!-- General Settings -->
      <div class="card bg-secondary my-4">
        <div class="card-body">
          <h4 class="card-title">General Settings</h4>
          <form>
            <div class="form-group">
              <label for="googleAPIKey">Google Cloud API Key</label>
              <input type="password" class="form-control sensitive-field" id="googleAPIKey" />
            </div>
            <div class="form-group">
              <label for="scoreSaberApiProfileLink"
                >Score Saber API Profile Link</label
              >
              <input
                type="password"
                class="form-control sensitive-field"
                id="scoreSaberApiProfileLink"
              />
            </div>
            <div class="form-group">
              <label for="pusloidAccessToken">Pusloid Access Token</label>
              <input type="password" class="form-control sensitive-field" id="pusloidAccessToken" />
            </div>
            <button
              type="button"
              class="btn btn-primary mt-2"
              onclick="setGeneralSettings()"
            >
              Set
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.socket.io/4.7.2/socket.io.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="settings.js"></script>
  </body>
</html>
